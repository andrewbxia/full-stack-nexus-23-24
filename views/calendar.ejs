            .tooltip {
                width: fit-content;
                background-color: aquamarine;
                border: 5px dashed salmon;
                border-radius: 8px;
                padding:0.5em;
                position:absolute;
                bottom: 101%;
                left: 0;
                visibility:hidden;
                z-index: 0;
            }
            
            .calendar-day-number:hover > .tooltip {
                z-index: 100;
                visibility: visible;
            }
            .calendar-day-number:active > .tooltip {
                z-index: 100;
                visibility: visible;
            }


        </style>

